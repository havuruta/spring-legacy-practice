<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.balanceeat.demo.domain.user.mapper.UserMapper">
    
    <!-- 사용자 정보 조회 -->
    <select id="getUserById" parameterType="String" resultType="com.balanceeat.demo.domain.user.dto.UserDTO">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>
    
    <!-- 사용자 정보 수정 -->
    <update id="updateUser" parameterType="com.balanceeat.demo.domain.user.dto.UserDTO">
        UPDATE users 
        SET password = #{password},
            name = #{name},
            email = #{email},
            phone = #{phone},
            address = #{address}
        WHERE user_id = #{userId}
    </update>
    
    <!-- 회원 탈퇴 -->
    <delete id="deleteUser" parameterType="String">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>
</mapper> 